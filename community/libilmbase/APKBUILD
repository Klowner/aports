# Contributor:
# Maintainer:
pkgname=libilmbase
pkgver=2.2.0
pkgrel=0
pkgdesc="High dynamic-range (HDR) image file format library"
url="http://www.openexr.com/"
arch="all"
license="BSD"
depends=""
makedepends="automake autoconf libtool"
install=""
subpackages="${pkgname}-dev"
source="http://download.savannah.nongnu.org/releases/openexr/ilmbase-${pkgver}.tar.gz"
_builddir="$srcdir"/ilmbase-$pkgver

build() {
	cd "$_builddir"
	./bootstrap
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" docdir=/usr/share/doc/$pkgname \
		install || return 1
}

dev() {
	cd "$_builddir"
	default_dev
}

