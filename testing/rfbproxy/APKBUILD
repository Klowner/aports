# Maintainer: Mark Riedesel <mark@klowner.com>
pkgname=rfbproxy
pkgver=1.1.1
pkgrel=03
pkgsuffix=pierre-$pkgrel
pkgdesc="A program for recording, playback, and video conversion of VNC sessions"
url="http://rfbproxy.sourceforge.net/"
arch="all"
license="GPL2"
depends=""
makedepends="make"
install=""
subpackages="$pkgname-doc"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/pmdumuid/rfbproxy/archive/${pkgname}-${pkgver}-${pkgsuffix}.tar.gz"
builddir="$srcdir/"${pkgname}-${pkgname}-${pkgver}-${pkgsuffix}

build() {
	cd "$builddir"/
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

