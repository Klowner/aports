# Contributor: Mark Riedesel <mark@klowner.com>
# Maintainer:
pkgname=openexr-klowner
pkgver=2.2.0
pkgrel=0
pkgdesc="High dynamic-range (HDR) image file format library"
url="http://www.openexr.com/"
arch="all"
license="BSD"
depends="libilmbase"
makedepends="zlib-dev libilmbase-dev"
install=""
subpackages="$pkgname-doc $pkgname-dev $pkgname-utils"
source="http://download.savannah.nongnu.org/releases/${pkgname}/${pkgname}-${pkgver}.tar.gz"
_builddir="$srcdir"/openexr-$pkgver

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
}

dev() {
	default_dev
}

doc() {
	default_doc
}

utils() {
	pkgdesc="Utilities for manipulating OpenEXR images"
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

md5sums="b64e931c82aa3790329c21418373db4e  openexr-2.2.0.tar.gz"
sha256sums="36a012f6c43213f840ce29a8b182700f6cf6b214bea0d5735594136b44914231  openexr-2.2.0.tar.gz"
sha512sums="017abbeeb6b814508180721bc8e8940094965c4c55b135a198c6bcb109a04bf7f72e4aee81ee72cb2185fe818a41d892b383e8d2d59f40c673198948cb79279a  openexr-2.2.0.tar.gz"
